{
  "name": "@hannesroth88/react-pdf-highlighter-extended",
  "type": "module",
  "version": "0.0.1",
  "description": "Set of modern React components for PDF highlighting (fork with enhancements)",
  "author": "Hannes Roth <hannesroth88@protonmail.com>",
  "license": "MIT",
  "contributors": [
    {
      "name": "Hannes Roth",
      "email": "hannesroth88@protonmail.com"
    },
