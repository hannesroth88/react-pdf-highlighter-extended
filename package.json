  "keywords": [
    "pdf",
    "highlight",
    "annotator",
    "react-component",
    "react"
  ],
  "files": [
    "dist"
  ],
  "types": "./dist/esm/index.d.ts",
  "main": "./dist/esm/index.js",
  "module": "./dist/esm/index.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "(cd ./example && vite)",
    "build": "npm run clean && npm install && npm run build:esm && npm run build:copy-styles && npm run build:example && npm run build:docs",
    "build:lib": "npm run build:esm && npm run build:copy-styles",
    "build:esm": "tsc",
    "build:copy-styles": "cp -r ./src/style ./dist/esm",
    "build:example": "(cd ./example && tsc && vite build && mkdir \"../public/\" && cp -r example-app ../public/)",
    "build:docs": "npx typedoc",
    "clean": "rm -rf dist public node_modules package-lock.json",
    "prepare": "npm run build:lib",
    "prepublishOnly": "npm run build:lib"
  },
  "peerDependencies": {
    "react": "^18.3.1 || ^19.0.0",
    "react-dom": "^18.3.1 || ^19.0.0",
    "pdfjs-dist": "^5.3.31"
  },
  "dependencies": {
    "lodash.debounce": "^4.0.8",
    "react-rnd": "^10.5.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hannesroth88/react-pdf-highlighter-extended.git"
  },
  "bugs": {
    "url": "https://github.com/hannesroth88/react-pdf-highlighter-extended/issues"
  },
  "devDependencies": {
    "@types/lodash.debounce": "^4.0.9",
    "@types/node": "^24.2.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "pdfjs-dist": "5.3.93",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "typedoc": "^0.25.13",
    "typedoc-theme-category-nav": "^0.0.3",
    "typescript": "^5.4.5"
  }
}
